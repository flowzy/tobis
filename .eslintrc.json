{
	"extends": ["eslint:recommended"],
	"env": {
		"node": true,
		"es2024": true
	},
	"parser": "@typescript-eslint/parser",
	"rules": {
		"sort-imports": [
			"warn",
			{
				"ignoreCase": true,
				"ignoreDeclarationSort": true,
				"ignoreMemberSort": true,
				"memberSyntaxSortOrder": ["none", "all", "multiple", "single"],
				"allowSeparatedGroups": false
			}
		]
	}
}
